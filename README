EOF
) > ~/.XResources
  xrdb -load ~/.XResources

dosemu vga font
===============
for encodings: cp437, cp866

  ftp -o /dev/stdout 'http://sourceforge.net/projects/dosemu/files/dosemu/1.4.0/dosemu-1.4.0.tgz/download' | gunzip -c | tar -xvf - 'dosemu-1.4.0/etc/*.bdf'
  for bdf in dosemu-1.4.0/etc/*.bdf; do
    bdftopcf $bdf | gzip > $(echo $bdf|sed 's/bdf$/pcf.gz/g')
  done 

  openbsd,
  ========

    sudo cp dosemu-1.4.0/etc/*.pcf.gz /usr/X11R6/lib/X11/fonts/misc/
    sudo mkfontdir /usr/X11R6/lib/X11/fonts/misc/

  debian,
  =======
    sudo cp dosemu-1.4.0/etc/*.pcf.gz /usr/share/fonts/X11/misc
    sudo mkfontdir /usr/share/fonts/X11/misc

  xset fp rehash
  xlsfonts | grep vga


terminus X11 font from debian
==================
for encodings:
  microsoft-cp1251, iso8859-1, iso8859-2,
  iso8859-5, iso8859-7, iso8859-9, iso8859-13,
  iso8859-15, iso8859-16, koi8-r, koi8-u,
  paratype-pt154, iso10646-1, ibm-cp437,
  ibm-cp850, ibm-cp852, ibm-cp855, ibm-cp860,
  ibm-cp863, ibm-cp865, ibm-cp866

     debian
     ======

  sudo apt-get install xfonts-terminus xfonts-terminus-dos
  sudo mkfontdir /usr/share/fonts/X11/misc
  xset fp rehash
  xlsfonts | grep cp437

     non-debian
     ==========

  mirror=http://mirrors.kernel.org/debian/pool

  cd /tmp
  ftp "$mirror/main/x/xfonts-terminus/xfonts-terminus_4.35-1_all.deb"
  ar x xfonts-terminus_4.35-1_all.deb
  tar -xzvf data.tar.gz ./usr/share/fonts/X11/misc 

  ftp "$mirror/main/x/xfonts-terminus/xfonts-terminus-dos_4.35-1_all.deb"
  ar x xfonts-terminus-dos_4.35-1_all.deb
  tar -xzvf data.tar.gz ./usr/share/fonts/X11/misc 

  sudo cp ./usr/share/fonts/X11/misc/*.gz /usr/X11R6/lib/X11/fonts/misc/

  rm -f control.tar.gz data.tar.gz xfonts-terminus_4.35-1_all.deb xfonts-terminus-dos_4.35-1_all.deb
  sudo mkfontdir /usr/X11R6/lib/X11/fonts/misc/
  xset fp rehash
  xlsfonts | grep cp437



#From http://dmr.ath.cx/misc/cp437/,
#
#  wget -O /dev/stdout 'http://dmr.ath.cx/misc/cp437/fonts.tar.bz2' \
#  | bunzip2 -c | tar -C ~/.fonts -xf -
#  cd ~/.fonts/cp437


